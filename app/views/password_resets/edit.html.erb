<div class="container d-flex flex-row justify-content-center align-items-center vh-100">
    <div class= "card p-5 mx-auto my-auto">
        <h1>Reset Your Password</h1>

        <div class="card-body">
            <%= form_with model: @user, url: password_reset_path(token: params[:token]) do |form|%>
                <% if form.object.errors.any? %>
                    <%= form.object.errors.full_messages.each do |message| %>
                        <div><%= message %></div>
                    <% end %>
                <% end %>

                <div>    
                    <%= form.label :password %>
                    <%= form.password_field :password %>
                </div>

                <div>    
                    <%= form.label :password_confirmation %>
                    <%= form.password_field :password_confirmation %>
                </div>

                <div>
                    <%= form.submit "Reset Your Password" %>
                </div> 
            <% end %>
        </div>
    </div>
</div>